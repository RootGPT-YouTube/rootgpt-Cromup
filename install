# == Installazione di Cromup via curl ==
echo -e "\e[1;32mRichiesta di password di root o amministratore:\e[0m"

# == Chiusura di Cromite se aperto ==
sudo pkill -9 cromite

# == Installazione di git (se non presente) ==
sudo echo -e "\e[1;32mVerifica e installazione delle dipendenze: software git...\e[0m"
sleep 3
if ! command -v git &> /dev/null; then
    echo -e "\e[1;32mgit non trovato, installazione in corso...\e[0m"
    if command -v dnf &> /dev/null; then
        sudo dnf install git -y
    elif command -v apt &> /dev/null; then
        sudo apt install git -y
    elif command -v pacman &> /dev/null; then
        sudo pacman -Syu --noconfirm git
    elif command -v zypper &> /dev/null; then
        sudo zypper install git -y
    else
        echo -e "\e[1;32mImpossibile installare git automaticamente, Ã¨ necessario installarlo manualmente.\e[0m"
        exit 1
    fi
fi

# == Clonazione del repository ==
sudo echo -e "\e[1;32mClonazione del repository...\e[0m"
git clone https://github.com/RootGPT-YouTube/rootgpt-Cromup.git

# == Aggiunta dell'opzione eseguibile al file install.sh e sua esecuzione ==
sudo echo -e "\e[1;32mAvvio installazione di Cromite.\e[0m"
sleep 3
sudo chmod a+x ~/rootgpt-Cromup/install.sh && ~/rootgpt-Cromup/install.sh
